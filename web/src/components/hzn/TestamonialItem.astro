---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  text: string;
  image: ImageMetadata;
  icon: ImageMetadata;
  name: string;
  title: string;
}

const { text, image, icon, name, title } = Astro.props;
---

<div class="flex flex-col items-center w-[min(80rem,85svw)] gap-8 md:p-16">
  <div
    class="flex px-9 py-12 flex-col items-start gap-3 w-full rounded-xl bg-ui-elements-dark text-ui-elements-white text-center text-2xl"
  >
    {text}
  </div>
  <div class="flex flex-col items-center gap-4">
    <div class="relative">
      <Image
        class="flex w-20 h-20 flex-col justify-center items-center rounded-full"
        src={image}
        alt="avatar"
      />
      <Image
        class="absolute w-12 h-12 bottom-0 right-0 rounded-full translate-x-1/3 translate-y-1"
        src={icon}
        alt="icon"
      />
    </div>
    <div class="flex flex-col items-center self-stretch gap-2">
      <span class="text-ui-elements-dark text-center font-bold text-xl">
        {name}
      </span>
      <small class="text-ui-elements-gray text-center">
        {title}
      </small>
    </div>
  </div>
</div>

---
import { Image } from "astro:assets";

interface Props {
  icon: ImageMetadata;
  boldText: string;
  regularText: string;
  iconAlt: string;
}

const { icon, boldText, regularText, iconAlt } = Astro.props;

const MainContainer = "div";
const TextContainer = "span";
const BoldText = "span";
---

<MainContainer class="flex items-center gap-2">
  <Image src={icon} alt={iconAlt} class="w-6 h-6" />
  <TextContainer class="text-black text-lg font-normal">
    {boldText && <BoldText class="font-bold">{boldText} </BoldText>}
    {" "}{regularText}
  </TextContainer>
</MainContainer>
